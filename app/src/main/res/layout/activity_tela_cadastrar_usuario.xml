<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.bookfast.bookfast.gui.TelaCadastrarUsuario">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@drawable/fundo"
        android:weightSum="1">


        <EditText
            android:id="@+id/editNovoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome"
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorgray"
            android:inputType="text" />

        <EditText
            android:id="@+id/editNovoEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorgray"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editNovoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cpf"
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorgray"
            android:inputType="text|number" />


        <EditText
            android:id="@+id/editNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:ems="10"
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorgray"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkGreen"
            android:layout_marginTop="1dp"
            android:text="REGISTRAR" />

        <Button
            android:id="@+id/btCancelarRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:layout_marginTop="4dp"
            android:text="CANCELAR" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
