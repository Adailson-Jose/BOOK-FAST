<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/raizLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pessoa.gui.TelaLogin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fundo"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-156dp"
        tools:layout_editor_absoluteY="272dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="0.16"
            android:enabled="false"
            android:fontFamily="serif"
            android:text="BEM-VINDO"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorBlue"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="BEM-VINDO" />

        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="UsuÃ¡rio"
            android:inputType="number"
            android:text=""
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorGrayyy" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/colorgray"
            android:textColorHint="@color/colorGrayyy" />

        <Button
            android:id="@+id/btLogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOGAR"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btRecuperarSenha"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECUPERAR SENHA"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btCadastrarUsuario"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CADASTRAR "
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>