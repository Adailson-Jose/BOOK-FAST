<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/raizTelaUserFuncao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.bookfast.bookfast.dominio.pessoa.gui.TelaInicialUsuarioComum">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/raizTelaUserComum"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fundo"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textViewBemVindo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorGrayyy"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btEmprestimoQRcode"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="EMPRESTIMO DE LIVRO VIA LEITOR"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btListalivros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTA DE LIVROS "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btMinhaInformacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MINHAS INFORMAÇÕES "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="LIVROS ALUGADOS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ListView
            android:id="@+id/listViewLivros"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_weight="0.46"
            android:background="@color/colorGrayyy" />

    </LinearLayout>
</ScrollView>
