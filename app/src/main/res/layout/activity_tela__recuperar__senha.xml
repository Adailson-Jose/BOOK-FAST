<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.bookfast.bookfast.gui.TelaRecuperarSenha">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="510dp"
        android:orientation="vertical"
        android:background="@drawable/fundo"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="RECUPERAÃ‡AO DE SENHA"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/editCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cpf"
            android:inputType="number"
            android:textColor="@color/colorGrayyy"
            android:textColorHint="@color/colorGrayyy"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:textColor="@color/colorGrayyy"
            android:textColorHint="@color/colorGrayyy" />

        <EditText
            android:id="@+id/editNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nova Senha"
            android:textColor="@color/colorGrayyy"
            android:textColorHint="@color/colorGrayyy"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/btAlterarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="ALTERAR SENHA" />

        <Button
            android:id="@+id/btCancelarAlteracao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="CANCELAR" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
