<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projeto.bookfast.bookfast.gui.TelaLivroAdministrador"
    tools:layout_editor_absoluteY="81dp"
    android:scaleType="centerCrop">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@drawable/fundo"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentLeft="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="serif"
            android:text="CADASTRAR LIVRO"
            android:textAlignment="center"
            android:textColor="@color/colorBlue"
            android:textSize="20dp"
            android:layout_weight="0.32" />

        <Button
            android:id="@+id/btCadastrarLivro"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CADASTRAR LIVRO"
            android:textColor="#000000"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btEditarLivro"
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="EDITAR LIVRO"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btListarLivros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LISTAR LIVROS"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
